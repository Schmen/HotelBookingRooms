@model List<HotelBookingRooms.ViewModels.ReservationVM.IndexReservationVM>

@{
    ViewData["Title"] = "Reservation";
}

<h2>Reservation</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create New </a>
</p>

<table class="table table-striped">
    <tr>
        <th>
            No
        </th>
        <th>
            CkkIn
        </th>
        <th>
            ChkOut
        </th>
        <th>
            Hotel
        </th>
        <th>
            Room Id
        </th>
        <th>
            Status
        </th>
        <th>
            User Id
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChkIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChkOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" }) </td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) </td>
            <td>@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) </td>
        </tr>
    }
</table>