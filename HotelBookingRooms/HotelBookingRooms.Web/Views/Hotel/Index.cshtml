@model IQueryable<HotelBookingRooms.BLL.Entities.Hotel>

@{
    ViewData["Title"] = "All hotels";
}
<table class="table table-striped">
    <tr>
        <th>
            Hotel ID
        </th>
        <th>
            Nazwa hotelux
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" }) </td>
        <td>@Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) </td>
        <td>@Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) </td>
    </tr>
    }
</table>