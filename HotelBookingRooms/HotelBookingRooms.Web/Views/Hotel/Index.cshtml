@model IQueryable<HotelBookingRooms.BLL.Entities.Hotel>

@{
    ViewData["Title"] = "All hotels";
}
<h2>Hotel</h2>
<p>
    <a class="btn btn-success" asp-action="Create">Create New </a>
</p>

<table class="table table-striped">
    <tr>
        @*<th>
            Hotel ID
        </th>*@
        <th>
            Hotel name
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" }) </td>
        <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) </td>
        <td>@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) </td>
    </tr>
    }
</table>