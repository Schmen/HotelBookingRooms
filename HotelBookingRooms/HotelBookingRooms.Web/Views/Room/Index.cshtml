@model List<HotelBookingRooms.BLL.Entities.Room>

@{
    ViewData["Title"] = "Room";
}

<h2>Room</h2>


<table class="table table-striped">
    <tr>
        <th>
            Hotel name
        </th>
        <th>
            No Room
        </th>
        <th>
            PriceStandardNumber
        </th>
        <th>
            PriceSeasonNumber
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType.Hotel.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType.PriceStandardNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType.PriceSeasonNumber)
        </td>
        <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" }) </td>
        <td>@Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) </td>
        <td>@Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) </td>
    </tr>
    }
</table>